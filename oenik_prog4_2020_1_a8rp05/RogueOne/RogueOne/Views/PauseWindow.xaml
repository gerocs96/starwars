<Window x:Class="RogueOne.Views.PauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RogueOne.Views"
        xmlns:vm="clr-namespace:RogueOne.ViewModels"
        mc:Ignorable="d"
        Title="PauseWindow" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <vm:PauseViewModel x:Key="PVM" />
    </Window.Resources>
    <StackPanel>
        <Button Width="400" Height="30" Content="Continue" Click="ContinueButton"/>
        <Button Width="400" Height="30" Content="Save Game" Click="SaveButton"/>
        <Button Width="400" Height="30" Content="Exit" Click="ExitButton"/>
    </StackPanel>
</Window>
